        </activity>

        <activity android:name=".ui.detail.ThreadDetailActivity" />
        <activity android:name=".ui.creation.thread.CreateThreadActivity" />
        <activity android:name=".ui.creation.comment.CreateCommentActivity" />
        <activity android:name=".ui.notification.NotificationListActivity" />
    </application>

</manifest>