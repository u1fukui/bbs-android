<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/BaseActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey600</item>
        <item name="colorControlNormal">@color/grey200</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <!-- support library compatibility -->
        <item name="actionBarTheme">@style/BaseActionBarTheme</item>
        <item name="actionBarStyle">@style/BaseActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.ColoredStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="BaseActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>
