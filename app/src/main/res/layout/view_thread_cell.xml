<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.u1fukui.bbs.viewmodel.ThreadViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:onClick="@{viewModel::onClickThread}">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_alpha_50"
            android:textSize="10sp"
            android:text="@{viewModel.name}"
            tools:text="Yuichiさん" />

        <TextView
            android:id="@+id/updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/author"
            android:textColor="@color/grey500"
            android:textSize="10sp"
            android:text="@{viewModel.updatedAt}"
            tools:text="2017/01/01 12:00 更新" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/updated_at"
            android:layout_marginTop="10dp"
            android:text="@{viewModel.bbsThread.title}"
            android:textSize="14sp"
            tools:text="タイトル" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textSize="10sp"
            android:text="@{viewModel.bbsThread.description}"
            tools:text="ここに本文を表示します" />

    </RelativeLayout>

</layout>
